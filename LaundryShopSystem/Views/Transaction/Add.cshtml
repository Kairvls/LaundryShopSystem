@model LaundryShopSystem.Models.Transaction
@{
    ViewBag.Title = "Add Payment";
    var order = ViewBag.Order as LaundryShopSystem.Models.Order;
}
<div class="card card-strong p-4" style="max-width:720px;">
    <h4 class="accent">Record Payment</h4>
    @if (order != null)
    {
        <p><strong>Order #:</strong> @order.OrderId</p>
        <p><strong>Amount Due:</strong> ₱@order.TotalAmount</p>
    }
    <form method="post" action="/Transaction/Add">
        <input type="hidden" name="OrderId" value="@order?.OrderId" />
        <div class="mb-3">
            <label class="form-label">Amount Paid</label>
            <input name="AmountPaid" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Payment Method</label>
            <select name="PaymentMethod" class="form-select">
                <option>Cash</option>
                <option>GCash</option>
                <option>Card</option>
            </select>
        </div>
        <button class="btn btn-success">Submit Payment</button>
    </form>
</div>
