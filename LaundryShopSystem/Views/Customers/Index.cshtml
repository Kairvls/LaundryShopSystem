@model IEnumerable<LaundryShopSystem.Models.Customer>
@{
    ViewBag.Title = "Customers";
}
<div class="mb-3 d-flex justify-content-between align-items-center">
    <h3 class="mb-0">Customers</h3>
    <a class="btn btn-primary" href="/Customers/Create">Add Customer</a>
</div>

<div class="card card-strong p-3">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.FullName</td>
                    <td>@c.Phone</td>
                    <td>@c.Email</td>
                    <td>@c.Address</td>
                    <td>@c.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td><a class="btn btn-sm btn-outline-primary" href="/Customers/Details/@c.CustomerId">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
