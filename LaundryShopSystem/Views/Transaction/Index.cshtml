@model IEnumerable<LaundryShopSystem.Models.Transaction>
@{
    ViewBag.Title = "Transactions";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Transactions</h3>
</div>

<div class="card card-strong p-3">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Order ID</th>
                <th>Amount</th>
                <th>Payment</th>
                <th>Paid At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var t in Model){
            <tr>
                <td>@t.TransactionId</td>
                <td>@t.OrderId</td>
                <td>₱@t.AmountPaid</td>
                <td>@t.PaymentMethod</td>
                <td>@t.PaidAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td><a class="btn btn-sm btn-outline-primary" href="/Transaction/Receipt/@t.TransactionId">Receipt</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
