@*
    Shared layout — Bootstrap 5 white + blue accent theme.
*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - LaundryShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f6f8fb;
            color: #333;
        }

        .card-strong {
            box-shadow: 0 6px 18px rgba(19, 60, 125, 0.06);
            border-radius: 12px;
        }

        .accent {
            color: #0b5ed7;
        }

        .topbar {
            background: linear-gradient(90deg,#e9f2ff,#ffffff);
            border-bottom: 1px solid #e6eefc;
        }

        .nav-link.active {
            font-weight: 600;
            color: #0b5ed7 !important;
        }

        .table thead th {
            background: #ffffff;
        }

        footer {
            padding: 20px 0;
            color: #888;
            font-size: .9rem;
        }
    </style>
    @RenderSection("Head", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg topbar">
        <div class="container">
            <a class="navbar-brand accent fw-bold" href="/">LaundryShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMain">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Orders/Create">New Order</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Orders/Index">Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Transaction/Index">Transactions</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Admin</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <small>© @DateTime.Now.Year LaundryShop · Built with ❤️</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
